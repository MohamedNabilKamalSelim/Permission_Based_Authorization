@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Users";
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.userName</td>
                <td>@user.userEmail</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-action="ManageRoles" asp-route-userId="@user.userId">Manage Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
