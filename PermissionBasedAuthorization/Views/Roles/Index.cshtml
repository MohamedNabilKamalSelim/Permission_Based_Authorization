@model List<IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<partial name="_RoleForm" model="new RoleFormViewModel()" />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Role Id</th>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var role in Model){
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a class="btn btn-primary" asp-action="ManagePermissions" asp-route-roleId="@role.Id">Permissions</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}